<!-- ./views/profile.ejs -->
<!doctype html>
<html>
<%- include ../partials/top.ejs %>

<!-- Body content -->

    <!-- Account information -->
    <div class="account-container">
        <ul style="float: right;">
            <div class="statements-container">
                <% if(account.statements.length != 0) { %>
                    <% for(i = account.statements.length - 1; i >= 0; i--) { %>
                        <div class="statement-container">
                            <li><strong><span class="statement-date"> 
                            <%= account.statements[i].dateString %> </span></strong>
                            <span class="statement-description"> 
                            <%= account.statements[i].description %></span>
                            <span class="statement-amount">
                            <%= account.statements[i].amount %></span></li>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </ul>
        <h3><span class="fa fa-user"></span>Account Summary</h3>
        <p>
            <strong>account</strong>: <%= account.accountNumber %> <br>
            <% if(user.balance != null) { %>
                <strong>balance</strong>: $<%= account.balance %>
            <% } else { %>
                <strong>balance</strong>: $0.00
            <% } %>
            <br>
            <strong>email</strong>: <%= account.email %><br><br>
            <a class="btn btn-default" href="/admin/account/deposit">Make a Deposit</a>
            <a class="btn btn-default" href="/admin/account/withdraw">Make a Withdrawal</a>
        </p>
    </div>

<!-- End body content -->

<%- include ../partials/bottom.ejs %>
</html>